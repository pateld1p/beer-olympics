{
    "version": 2,
    "builds": [
        {
            "src": "api/server.js",
            "use": "@vercel/node"
        },
        {
            "src": "public/**/*",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        { "src": "/scripts/firebase.js", "dest": "/scripts/firebase.js" },  
        { "src": "/scripts/app.js", "dest": "/scripts/app.js" },            
        { "src": "/scripts/score_keeper.js", "dest": "/scripts/score_keeper.js" },
        { "src": "/scripts/score_winner.js", "dest": "/scripts/score_winner.js" },
        { "src": "/(.*)", "dest": "api/server.js" }  
    ]
}
